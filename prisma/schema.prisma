generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  files File[]
  auditLogs AuditLog[]

}

model File {
  id            String @id @default(uuid())
  filename      String
  encryptedPath String
  ownerId       String

  owner      User        @relation(fields: [ownerId], references: [id])
  shareLinks ShareLink[]

  uploadedAt DateTime @default(now())
  auditLogs AuditLog[]

}

model ShareLink {
  id            String   @id @default(uuid())
  token         String   @unique

  fileId        String
  file          File     @relation(fields: [fileId], references: [id])

  expiresAt     DateTime

  passwordHash  String?

  // ✅ Owner decides unlock validity
  unlockMinutes Int?     // e.g. 2 minutes

  // ✅ One-time download session token
  downloadToken   String?
  tokenExpiresAt  DateTime?

  createdAt     DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(uuid())

  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  action    String   // UPLOAD, DOWNLOAD, SHARE_CREATED, etc.
  fileId    String?
  file      File?    @relation(fields: [fileId], references: [id])

  ipAddress String?
  metadata  Json?

  createdAt DateTime @default(now())
}

